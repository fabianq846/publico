<!-- app/views/users/index.html.erb -->

<h1>Lista de Usuarios</h1>
<% @users.each do |user| %>
  <p>
    <%= user.name %> | <%= link_to 'Edit', edit_user_path(user) %> | <%= link_to 'Delete', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %>


  </p>
<% end %>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Email</th>
            <th>Nombre</th>
            <th>Fecha de Creaci√≥n</th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
            <tr>
                <td><%= user.id %></td>
                <td><%= user.email %></td>
                <td><%= user.name %></td>
                <td><%= user.created_at.strftime('%d-%m-%Y %H:%M:%S') %></td>
            </tr>
        <% end %>
    </tbody>
</table>
